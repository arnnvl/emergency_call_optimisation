def main(audio_path):
    chemin_dossier_parent = os.path.dirname(os.getcwd())
    chemin_dossier_modele = os.path.join(chemin_dossier_parent, 'modelewhisper')
    transcriber = Transcribe(chemin_dossier_modele)
    text = transcriber.transcribe(audio_path)
    print(text)
    


